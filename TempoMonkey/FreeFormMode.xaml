		<Image Canvas.Left="92" Canvas.Top="12" Height="50" Name="volumeAvatar" Stretch="Fill" Width="50" />
		<Image Canvas.Left="263" Canvas.Top="12" Height="50" Name="pitchAvatar" Stretch="Fill" Width="50" />
		<Image Canvas.Left="454" Canvas.Top="12" Height="50" Name="tempoAvatar" Stretch="Fill" Width="50" />
