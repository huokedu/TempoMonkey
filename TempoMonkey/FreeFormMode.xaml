        <Slider Name="TempoSlider" Canvas.Left="486" Canvas.Top="388" Height="28" Width="260" Value="100" Minimum="40" Maximum="200" TickFrequency=".1"/>
        <Border Name="TempoFocus" Visibility="Hidden" BorderBrush="#E84AAF" BorderThickness="3" Height="51" Canvas.Left="506" Canvas.Top="337" Width="94"/>
        <Border Name="PitchFocus" Visibility="Hidden" BorderBrush="#5CC6D2" BorderThickness="3" Height="48" Canvas.Left="506" Canvas.Top="256" Width="81"/>
