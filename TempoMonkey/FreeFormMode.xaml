        <Button Content="Resume" Name="ResumeButton" Canvas.ZIndex="2" Canvas.Left="200" Canvas.Top="235" Width="152" Height="46" FontSize="30" Visibility="Hidden" MouseEnter="Mouse_Enter" MouseLeave="Mouse_Leave"/>
        <Button Content="Quit" Name="QuitButton" Canvas.ZIndex="2" Canvas.Left="520" Canvas.Top="235" Width="152" Height="46" FontSize="30" Visibility="Hidden"  MouseEnter="Mouse_Enter" MouseLeave="Mouse_Leave"/>

