<Page x:Class="TempoMonkey.FreeFormMode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
	Title="FreeFormMode">

    <Canvas Name="mainCanvas" Margin="0,6,0,-6" Background="Black">
		<!-- Song titles -->
		<Label Name="SongTitle0" Content="Test Song" Canvas.Left="278" Canvas.Top="58" FontSize="24" Foreground="#666" />
		<Label Name="SongTitle1" Content="Second Test Song" Canvas.Left="550" Canvas.Top="58" FontSize="24" Foreground="#FFF" />
		<Label Name="SongTitle2" Content="Third Test Song" Canvas.Left="864" Canvas.Top="58" FontSize="24" Foreground="#666" />
		
		<!-- Selector square for denoting selected song -->
		<Rectangle Name="BlueDot" Fill="Cyan" Height="9" Width="9" Canvas.Left="525" Canvas.Top="77" />
		<!-- Container objects for song waveforms -->
		<Grid Background="White" Name="SongContainer0" Width="800" Height="100" Canvas.Left="240" Canvas.Top="100"></Grid>
		<Grid Background="White" Name="SongContainer1" Width="800" Height="100" Canvas.Left="240" Canvas.Top="100"></Grid>
		<Grid Background="White" Name="SongContainer2" Width="800" Height="100" Canvas.Left="240" Canvas.Top="100"></Grid>

        
		<!-- Slider -->
        <Slider Visibility="Hidden" Name="SeekSlider" Canvas.Left="12" Canvas.Top="353" Height="29" Width="632" Value="0" Minimum="0" Maximum="100" TickFrequency=".1"/>
		<!-- End Slider -->
		<Image Canvas.Left="278" Canvas.Top="223" Height="50" Name="volumeAvatar" Stretch="Fill" Width="50" />
		<Image Canvas.Left="493" Canvas.Top="223" Height="50" Name="pitchAvatar" Stretch="Fill" Width="50" />
		<Image Canvas.Left="725" Canvas.Top="223" Height="50" Name="tempoAvatar" Stretch="Fill" Width="50" />
		<Image Canvas.Left="947" Canvas.Top="223" Height="50" Name="seekAvatar" Stretch="Fill" Width="50" />
		<!-- Pause overlay -->
		<Grid Name="PauseOverlay" Height="140" Width="600" Visibility="Hidden" Background="#CCC" Opacity="0.8" Canvas.Left="363" Canvas.Top="289">
			<Button Content="Resume" Name="ResumeButton" Width="152" Height="46" FontSize="30" Margin="77,47,371,47" />
			<Button Content="Quit" Name="QuitButton" Width="152" Height="46" FontSize="30" Margin="352,47,96,47" />
		</Grid>
		<!-- End overlay -->


    </Canvas>
</Page>