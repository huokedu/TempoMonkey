    <Canvas Name="mainCanvas" Margin="0,6,0,-6">

        <Label Canvas.Left="516" Canvas.Top="171" Name="Volume" Content="VOLUME" Height="46" Width="87" FontSize="20" FontFamily="Bold Art" FontStyle="Normal"/>
