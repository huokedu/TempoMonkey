<Page x:Class="TempoMonkey.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
	  Title="HomePage">
    <!--xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" Loaded="Page_Loaded" Unloaded="Page_Unloaded">-->
    <Page.Resources>
        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#555" Offset="0.0" />
            <GradientStop Color="#222" Offset="0.5" />
            <GradientStop Color="#000" Offset="0.5" />
            <GradientStop Color="#000" Offset="1.0" />
        </LinearGradientBrush>
    </Page.Resources>
    <Grid>
        <Canvas Name="mainCanvas">
			<Image Source="/Resources/Images/solo-button.png" Height="200 px" Width="200px" Canvas.Left="877" Canvas.Top="283" />
			<Image Source="/Resources/Images/buddy-button.png" Height="200 px" Width="200px" Canvas.Left="187" Canvas.Top="283" />
			<Button Content="With a Buddy"  Name="learningStudioButton" BorderBrush="Black" Opacity="0.8" Foreground="White" FontSize="25" FontFamily="Verdana" Click="learningStudioButton_Click" MouseEnter="Mouse_Enter" MouseLeave="Mouse_Leave" Canvas.Left="555" Canvas.Top="421" Padding="10,20,10,20" />
			<Button Content="Solo Play"  Name="browseMusic" BorderBrush="Black" Background="{StaticResource ButtonGradient}" Opacity="0.8" Foreground="White" FontSize="25" FontFamily="Verdana" Click="browseMusic_Click" MouseEnter="Mouse_Enter" MouseLeave="Mouse_Leave" HorizontalAlignment="Right" Padding="10,20,10,20" Canvas.Left="585" Canvas.Top="283" />
			<Image Name="image1" Stretch="Fill" Source="/Resources/images/tempo-monkey-logo.png" Canvas.Left="290" Canvas.Top="15" />
		</Canvas>
	</Grid>
</Page>
