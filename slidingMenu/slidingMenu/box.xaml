<UserControl x:Class="slidingMenu.box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="150.5" Width="149.5">
    <Canvas x:Name="boxCanvas" RenderTransformOrigin="0.5,0.5" Canvas.ZIndex="0" Height="150" VerticalAlignment="Top">
        <!--This label is required so that hoovering works-->
        <Label Height="150" Width="150"></Label>
        <Border Name="Highlight" BorderBrush="#F6B029" CornerRadius="5" BorderThickness="10"  Height="150" Width="150" />
        <Border Height="32" Width="130" Canvas.Top="108" Canvas.Left="10" VerticalAlignment="Center">
            <TextBlock Foreground="Black" Text="Sample Song Title its long longer" FontWeight="Bold"  Name="textBox" 
               FontFamily="Arial Black" FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" TextAlignment="Center" Background="#CCC"/>
        </Border>
        <Image Height="104" Width="136" Name="Image"  Canvas.Left="7" Canvas.Top="5" Stretch="Fill" />
            
        <Border Name="Border" BorderBrush="#FF908585" CornerRadius="5" BorderThickness="8"  Height="150" Width="150" />
    </Canvas>
</UserControl>
